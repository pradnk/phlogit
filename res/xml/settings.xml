<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Sync">
		<CheckBoxPreference android:title="Enable Auto Sync"
			android:defaultValue="true" android:summaryOn="Auto Sync ON"
			android:summaryOff="Auto Sync OFF"
			android:key="autoSync" />
		<CheckBoxPreference android:title="WiFi Only/Any Network"
			android:defaultValue="true" android:summaryOn="WiFi only"
			android:summaryOff="Any Network"
			android:dependency="autoSync"
			android:key="network" />
	</PreferenceCategory>
	<PreferenceCategory android:title="Notifications">
		<CheckBoxPreference android:title="Turn on notifications"
			android:defaultValue="true" android:summaryOn="Notifications ON"
			android:summaryOff="Notifications OFF"
			android:key="notifications" />
	</PreferenceCategory>
	<PreferenceCategory android:title="Steady Shot">
		<CheckBoxPreference android:title="Steady Shot"
			android:defaultValue="true" android:summaryOn="Steady Shot ON"
			android:summaryOff="Steady Shot OFF"
			android:key="steadyShot" />
	</PreferenceCategory>
	<PreferenceCategory android:title="Profile">
		<Preference android:title=""
		    android:summary="Clear Profile"
			android:key="profile" />
	</PreferenceCategory>
</PreferenceScreen>
