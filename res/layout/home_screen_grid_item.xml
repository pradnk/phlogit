<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent" android:gravity="center" android:padding="5dp"
  android:duplicateParentState="true">
    <ImageView android:layout_height="90dp" android:layout_width="80dp" android:src="@drawable/icon" android:id="@+id/imageView1" android:scaleType="fitCenter" android:padding="5dp" android:adjustViewBounds="true"
        ></ImageView>
    <TextView android:text="TextView" android:id="@+id/textView1" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingBottom="5dp" android:textColor="@color/black"></TextView>
    
</LinearLayout>
