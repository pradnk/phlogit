<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_tile"
    android:orientation="vertical" >

    <com.markupartist.android.widget.ActionBar
        android:id="@+id/actionBar1"
        style="@style/ActionBar" >
    </com.markupartist.android.widget.ActionBar>

    <TextView
        android:id="@+id/upcomingTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Upcoming"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_weight="0"
        android:background="@color/translucent"
        android:shadowColor="#000000"
		android:shadowDx="2"
		android:shadowDy="2"
		android:shadowRadius="2"
        android:textSize="15sp" />

    <GridView
        android:id="@+id/gridViewUpcoming"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:columnWidth="100dp"
        android:gravity="center"
        android:listSelector="@drawable/inner_button"
        android:numColumns="2"
        android:layout_weight="1"
        android:stretchMode="columnWidth" />

    <TextView
        android:id="@+id/emptyUp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="No items yet!"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:layout_weight="0"
        android:textSize="20sp"
        android:visibility="gone" />
    
    <TextView
        android:id="@+id/archivedTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Archived"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_weight="0"
        android:background="@color/translucent"
        android:shadowColor="#000000"
		android:shadowDx="2"
		android:shadowDy="2"
		android:shadowRadius="2"
        android:textSize="15sp" />

    <GridView
        android:id="@+id/gridViewArchived"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:columnWidth="50dp"
        android:gravity="center"
        android:listSelector="@drawable/inner_button"
        android:numColumns="2"
        android:layout_weight="1"
        android:layout_marginBottom="15dp"
        android:stretchMode="columnWidth" />
    
    <TextView
        android:id="@+id/emptyAr"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="No items yet!"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:layout_weight="0"
        android:layout_marginBottom="15dp"
        android:textSize="20sp"
        android:visibility="gone" />

</LinearLayout>