<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TranslucentTheme" parent="android:Theme">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@color/translucent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- for removing status bar shadow -->
    </style>
    <style name="TranslucentThemeDialog" parent="android:Theme.Dialog">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@color/translucent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:padding">10dp</item>
        <!-- for removing status bar shadow -->
    </style>
    <style name="DialogEditText" parent="@android:style/TextAppearance.Medium">
		<item name="android:background">@drawable/dlg_input_text</item>
		<item name="android:textColor">#333333</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_marginTop">2dp</item>
		<item name="android:layout_marginBottom">2dp</item>
		<item name="android:padding">2dp</item>
	</style>
	<style name="LightText" parent="@android:style/TextAppearance.Medium">
		<item name="android:textColor">@color/white</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_marginTop">2dp</item>
		<item name="android:layout_marginBottom">2dp</item>
		<item name="android:textSize">14sp</item>
	</style>
	<style name="LightTextBold" parent="@android:style/TextAppearance.Medium">
		<item name="android:textColor">@color/white</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_marginTop">2dp</item>
		<item name="android:layout_marginBottom">2dp</item>
		<item name="android:textSize">14sp</item>
		<item name="android:textStyle">bold</item>
	</style>
	<style name="DarkTextBold" parent="@android:style/TextAppearance.Medium">
		<item name="android:textColor">@color/black</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_marginTop">2dp</item>
		<item name="android:layout_marginBottom">2dp</item>
		<item name="android:textSize">14sp</item>
		<item name="android:textStyle">bold</item>
	</style>
	<style name="DarkText" parent="@android:style/TextAppearance.Medium">
		<item name="android:textColor">@color/black</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_marginTop">2dp</item>
		<item name="android:layout_marginBottom">2dp</item>
		<item name="android:textSize">14sp</item>
	</style>
	<style name="TranslucentTextBold" parent="@android:style/TextAppearance.Medium">
		<item name="android:textColor">@color/translucent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_marginTop">2dp</item>
		<item name="android:layout_marginBottom">2dp</item>
		<item name="android:textSize">14sp</item>
		<item name="android:textStyle">bold</item>
	</style>
	<style name="TranslucentTextTitleBold" parent="@android:style/TextAppearance.Medium">
		<item name="android:textColor">#A0000000</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_marginTop">2dp</item>
		<item name="android:layout_marginBottom">2dp</item>
		<item name="android:textSize">18sp</item>
		<item name="android:textStyle">bold</item>
	</style>
	<style name="SaveDialogBtn" parent="@android:style/TextAppearance.Medium">
		<item name="android:textColor">@color/white</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_marginTop">2dp</item>
		<item name="android:layout_marginBottom">2dp</item>
		<item name="android:textSize">14sp</item>
		<item name="android:gravity">center</item>
		<item name="android:minHeight">30dp</item>
		<item name="android:background">@drawable/save_dialog_btn</item>
	</style>
</resources>